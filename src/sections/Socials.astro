---
import Icon from "@components/Icon.astro";
import socials from "@config/socials";
---

<section id="socials">
  <h3>Socials</h3>
  <p>This is a sample description</p>

  <div class="container">
    {socials.map(social => (
      <Icon
        name={social.name}
        image={social.image}
        url={social.url}
      />
    ))}
  </div>
</section>

<style>
  .container {
    display: flex;
    justify-content: space-evenly;
  }

  @media (max-width: 53.25em) {
		h3, h4, h5, p, a {
			padding-left: 0.75rem;
			padding-right: 0.75rem;
		}
</style>