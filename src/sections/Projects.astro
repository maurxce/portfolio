---
import ThumbnailCard from "../components/ThumbnailCard.astro";
import projects from "../config/projects";
---

<section id="projects">
  <h3>Projects</h3>
  <p>This is a sample description</p>

  <div class="container">
    {projects.map(project => (
      <ThumbnailCard
        name={project.title}
        img={project.image}
        url={project.url}
      />
    ))}
  </div>

  <a href="/projects">View all</a>
</section>

<style>
  .container {
    display: flex;
    flex-wrap: wrap; 
    gap: 1em;
    justify-content: space-evenly;
    margin-bottom: 1em;
  }
</style>