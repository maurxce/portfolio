---
import FlexContainer from "@components/FlexContainer.astro";
import GenericProject from "@components/GenericProject.astro";

import projects from "@config/projects";

interface Props {
  amount: number;
}
 
const { amount } = Astro.props;
---

<section id="projects">
  <h3>Projects</h3>
  <p>This is a sample description</p>

  <FlexContainer>
    {projects.map((project, index) => (
      index < amount &&
      <GenericProject
        name={project.name}
        image={project.image}
        url={project.url}
      />
    ))}
  </FlexContainer>

  <!--<a href="/projects">View all</a>-->
</section>

<style>
  .container {
    display: flex;
    flex-wrap: wrap; 
    gap: 1em;
    justify-content: space-evenly;
    margin-bottom: 1em;
  }

  @media (max-width: 53.25em) {
		h3, h4, h5, p, a {
			padding-left: 0.75rem;
			padding-right: 0.75rem;
		}
	}
</style>