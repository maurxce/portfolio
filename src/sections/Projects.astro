---
import Container from "@components/Container.astro";
import ThumbnailCard from "@components/ThumbnailCard.astro";

import projects from "@config/projects";

interface Props {
  amount: number;
}
 
const { amount } = Astro.props;
---

<section id="projects">
  <h3>Projects</h3>
  <p>Here are some of my most recent projects</p>

  <Container>
    {projects.map((project, index) => (
      index < amount &&
      <ThumbnailCard
        name={project.name}
        image={project.image}
        description={project.description}
        url={project.url}
      />
    ))}
  </Container>

  <a href="/projects">View all</a>
</section>

<style>
  .container {
    display: flex;
    flex-wrap: wrap; 
    gap: 1em;
    justify-content: space-evenly;
    margin-bottom: 1em;
  }
</style>