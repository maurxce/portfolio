---
import { Image } from 'astro:assets';
import type { ImageMetadata } from "astro";

interface Props {
  name: string;
  image: ImageMetadata;
  url: string;
}

const { name, image, url } = Astro.props;
---

<div class="container">
  <a href={url}>
    <Image
      src={image}
      alt=`${name} Thumbnail`
      title={name}
      width={368}
      height={207}
    />

    <p>Test</p>
  </a>
</div>

<style>
  .container {
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: aqua;
  }

  a {
    display: flex;
    gap: 1em;
  }

  img {
    border-radius: 0.5em;
  }
</style>