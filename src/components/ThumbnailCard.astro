---
import { Image } from 'astro:assets';
import type { ImageMetadata } from "astro";

interface Props {
  name: string;
  image: ImageMetadata;
  description?: string;
  url: string;
}

const { name, image, description = "", url } = Astro.props;
---

<div class="container">
  <a href={url}>
    <Image
      src={image}
      alt={`${name} Thumbnail`}
      title={name}
      width={368}
      height={207}
      draggable="false"
    />
  </a>
  
  <p class="description">{description}</p>
</div>

<style>
  .container {
    position: relative;
    width: auto;
    height: auto;
    aspect-ratio: 16/9;
    overflow: hidden;
  }
  
  a {
    position: absolute;
    all: unset;
    cursor: pointer;
  }

  img {
    border-radius: 0.5em;
  }

  p.description {
    visibility: hidden;
  }

  @media (min-width: 53.25em) {
		img:hover {
      opacity: 0.1;
      z-index: -2;
      transition: opacity 0.3s;
    }

    p.description  {
      visibility: visible;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      padding: 1em;
    }
	}
</style>